<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/articlesView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="General"
        android:textColor="#757575"
        android:textSize="40sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

    <TextView
        android:id="@+id/newsView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Football"
        android:textColor="#757575"
        android:textSize="40sp"
        android:layout_below="@+id/articlesView"
        android:layout_marginTop="23dp"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="#757575"
        android:text="Cricket"
        android:id="@+id/cricketNews"
        android:gravity="center"
        android:layout_below="@+id/newsView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="#757575"
        android:text="The Hindu"
        android:id="@+id/theHinduNews"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/cricketNews"
        android:layout_alignParentStart="true" />
</RelativeLayout>
